{
  "compilerOptions": {
      "target": "es2020",
      "module": "commonjs",
      "moduleResolution": "node",
      "baseUrl": "./",
      "outDir": "../dist",
      "strict": true,
      "noImplicitAny": false,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "typeRoots": [
          "../node_modules/@types",
          "../interfaces"
      ]
  },
  "include": [".", "../interfaces"],
  "exclude": [
      "../src",
      "node_modules",
      "dist",
      "build",
      "public/assets",
      "**/*.test.ts",
      "**/*.spec.ts"
  ],
}
