{
    "name": "game-gear-ecommerce",
    "version": "0.0.0",
    "scripts": {
        "ng": "ng",
        "tsc": "tsc --noEmit true --project server/tsconfig.json",
        "dev-client": "ng serve",
        "dev-server": "ts-node-dev --respawn --transpile-only --no-notify --project server/tsconfig.json server/app.ts",
        "build-client": "ng build --configuration=production",
        "build-server": "cross-env NODE_ENV=production tsc --project server/tsconfig.json",
        "build": "yarn build-client && yarn build-server",
        "prod": "cross-env NODE_ENV=production PORT=3009 node ./dist/server/app.js",
        "deploy": "yarn build && yarn prod",
        "watch": "ng build --watch --configuration development",
        "test": "ng test",
        "dev": "run-p -rl dev-server dev-client"
    },
    "private": true,
    "dependencies": {
        "@angular/animations": "^17.3.0",
        "@angular/common": "^17.3.0",
        "@angular/compiler": "^17.3.0",
        "@angular/core": "^17.3.0",
        "@angular/forms": "^17.3.0",
        "@angular/platform-browser": "^17.3.0",
        "@angular/platform-browser-dynamic": "^17.3.0",
        "@angular/router": "^17.3.0",
        "axios": "^1.9.0",
        "bcrypt": "^5.1.1",
        "connect-mongo": "3.2.0",
        "cookie-parser": "^1.4.7",
        "cors": "^2.8.5",
        "cross-env": "^7.0.3",
        "dotenv": "^16.5.0",
        "express": "^5.1.0",
        "express-session": "^1.18.1",
        "moment": "^2.30.1",
        "mongoose": "5.13.15",
        "primeflex": "^4.0.0",
        "primeicons": "^7.0.0",
        "primeng": "17",
        "rxjs": "~7.8.0",
        "slugify": "^1.6.6",
        "tslib": "^2.3.0",
        "zone.js": "~0.14.3"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "^17.3.17",
        "@angular/cli": "^17.3.17",
        "@angular/compiler-cli": "^17.3.0",
        "@types/bcrypt": "^5.0.2",
        "@types/jasmine": "~5.1.0",
        "jasmine-core": "~5.1.0",
        "karma": "~6.4.0",
        "karma-chrome-launcher": "~3.2.0",
        "karma-coverage": "~2.2.0",
        "karma-jasmine": "~5.1.0",
        "karma-jasmine-html-reporter": "~2.1.0",
        "npm-run-all": "^4.1.5",
        "ts-node-dev": "^2.0.0",
        "typescript": "~5.4.2"
    }
}
